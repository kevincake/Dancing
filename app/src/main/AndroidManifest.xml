            android:theme="@style/NoAppTheme"/>
        <activity
            android:name=".RigsterPhoneNumActivity"
            android:theme="@style/NoAppTheme"/>
        <activity
            android:name=".FullUserInfoActivity"
            android:theme="@style/NoAppTheme"
            />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoAppTheme"/>
        <activity
            android:name=".HomePageActivity"
            android:theme="@style/AppTheme"/>
        <!-- <activity android:name=".MeterialActivity"></activity> -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- <activity android:name=".TestActivity"></activity> -->
        <activity
            android:name=".DancingPlanActivity"
            android:theme="@style/NoAppTheme"
            />
        <activity
            android:name=".MediaPlayerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/NoAppTheme"/>
        <activity android:name=".ForgetPwdActivity"/>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="56c7246767e58e5a060025d4"/>
        <meta-data
            android:name="UMENG_CHANNEL"
